{
  "name": "graphql-expressjs-boilerplate",
  "version": "1.0.0",
  "description": "Starter for a flexible and scalable GraphQL server for Nodejs with Expressjs",
  "author": "Leonardo B. Castro",
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "start": "nodemon --exec babel-node src/index.js --inspect",
    "prod": "npm run lint && NODE_ENV=production babel-node src/index.js",
    "lint": "npx eslint .",
    "test": "npx jest"
  },
  "jest": {
    "verbose": true,
    "bail": 1,
    "browser": false,
    "collectCoverageFrom": [
      "tests/**/*.{js}",
      "!**/node_modules/**"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-plugin-transform-optional-chaining": "^7.0.0-beta.3",
    "body-parser": "^1.18.2",
    "cors": "^2.8.5",
    "dataloader": "^1.4.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.4.2",
    "graphql-tools": "^4.0.5",
    "helmet": "^3.12.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "babel-jest": "^24.9.0",
    "babel-polyfill": "^6.26.0",
    "eslint": "^4.19.1",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2"
  }
}
